<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/wiget_mine_cstl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wiget_mine_aciv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/wiget_mine_aciv_main_bg"
        android:src="@drawable/loading_search_01"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/margin1"
        android:layout_marginBottom="@dimen/margin1"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wiget_mine_aciv_main_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wiget_mine_aciv_top"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/mainbackground"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/margin4"/>

</androidx.constraintlayout.widget.ConstraintLayout>

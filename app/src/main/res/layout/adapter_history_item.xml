<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/adapter_history_item_actv_vertical_separator"
        android:layout_width="@dimen/stroke_width2"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        android:layout_marginLeft="@dimen/margin4"
        android:background="@color/black"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/adapter_history_item_aciv_oval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/adapter_history_item_actv_vertical_separator"
        app:layout_constraintEnd_toEndOf="@+id/adapter_history_item_actv_vertical_separator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/adapter_history_oval_style"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/adapter_history_item_actv_horizontal_separator"
        android:layout_width="@dimen/margin9"
        android:layout_height="@dimen/stroke_width2"
        app:layout_constraintStart_toEndOf="@+id/adapter_history_item_aciv_oval"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/adapter_history_item_cstl_item"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/adapter_history_item_actv_horizontal_separator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/margin6"
        android:background="@drawable/style_adapter_history_item_style">

        <com.xwq.companyvxwhelper.widget.RoundImageView
            android:id="@+id/adapter_history_item_riv_status"
            android:layout_width="@dimen/margin8"
            android:layout_height="@dimen/margin8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="center"
            android:layout_marginLeft="@dimen/margin4"
            android:src="@mipmap/menu"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/adapter_history_item_cstl_info"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/adapter_history_item_riv_status"
            app:layout_constraintEnd_toStartOf="@+id/adapter_history_item_aciv_enter"
            android:layout_marginLeft="@dimen/margin4"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/adapter_history_item_actv_address"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin1"
                android:text="sdasdsdaad"
                app:layout_constraintBottom_toTopOf="@+id/adapter_history_item_actv_timestamp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/contentColor"
                android:gravity="left"
                android:maxLines="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/adapter_history_item_actv_timestamp"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin3"
                android:layout_marginBottom="@dimen/margin1"
                android:text="sdasadsadasdasdsadas"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adapter_history_item_actv_address"
                android:gravity="left"
                android:textColor="@color/contentColor"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/adapter_history_item_aciv_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/adapter_history_item_cstl_info"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/margin4"
            android:src="@mipmap/right_enter"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>
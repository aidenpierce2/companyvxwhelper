<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/style_user_input_telorpass"
android:layout_marginLeft="@dimen/margin4"
android:layout_marginRight="@dimen/margin4">

<androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/widget_input_verify_acet_input"
    android:layout_width="0dp"
    android:layout_height="@dimen/margin11"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/widget_user_telorpass_actv_input"
    android:background="@null"
    android:paddingLeft="@dimen/margin3"
    android:paddingRight="@dimen/margin3" />

<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/widget_user_telorpass_actv_input"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:gravity="center"
    app:layout_constraintStart_toEndOf="@+id/widget_input_verify_acet_input"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="获取验证码"
    android:paddingLeft="@dimen/margin3"
    android:paddingRight="@dimen/margin3"/>
</androidx.constraintlayout.widget.ConstraintLayout>
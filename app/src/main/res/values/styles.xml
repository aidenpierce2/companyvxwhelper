<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="splashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="main_guide_animation">
        <item name="android:windowEnterAnimation">@anim/main_guide_enter</item>
        <item name="android:windowExitAnimation">@anim/main_guide_exit</item>
        // 边框
        <item name="android:windowFrame">@null</item>
        // 浮现在activity之上
        <item name="android:windowIsFloating">true</item>
        // 半透明
        <item name="android:windowIsTranslucent">true</item>
        // 无标题
        <item name="android:windowNoTitle">true</item>
        // 背景透明
        <item name="android:background">@android:color/transparent</item>
        // 提示背景框透明
        <item name="android:windowBackground">@color/transparent</item>
        // 模糊
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="search_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/search_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/search_dialog_exit</item>
        // 边框
        <item name="android:windowFrame">@null</item>
        // 浮现在activity之上
        <item name="android:windowIsFloating">true</item>
        // 半透明
        <item name="android:windowIsTranslucent">true</item>
        // 无标题
        <item name="android:windowNoTitle">true</item>
        // 背景透明
        <item name="android:background">@android:color/transparent</item>
        // 提示背景框透明
        <item name="android:windowBackground">@color/transparent</item>
        // 模糊
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>